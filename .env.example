# Environment
NODE_ENV=development

# Database
DB_USER=financeuser
DB_PASSWORD=financepass
DB_NAME=familyfinance
DATABASE_URL=postgresql://financeuser:financepass@localhost:5432/familyfinance?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# WebAuthn
WEBAUTHN_RP_NAME=Family Finance
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=https://localhost

# SMTP (Magic Links)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@familyfinance.local

# Magic Link
MAGIC_LINK_SECRET=your-magic-link-secret-change-in-production
MAGIC_LINK_EXPIRES_IN=600

# Application
APP_URL=https://localhost
DOMAIN=localhost

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# Frontend
VITE_API_URL=https://localhost/api
