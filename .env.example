# Environment
NODE_ENV=development

# Database
DB_USER=kostuser
DB_PASSWORD=kostpass
DB_NAME=kost
DATABASE_URL=postgresql://kostuser:kostpass@localhost:5432/kost?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===================================
# Authentication Configuration
# ===================================
# Enable/disable authentication methods (at least one must be enabled)

# Password-based authentication (email + password)
AUTH_PASSWORD_ENABLED=true

# Magic link authentication (passwordless via email)
# Requires SMTP configuration below
AUTH_MAGIC_LINK_ENABLED=false

# WebAuthn/Passkey authentication (FIDO2 biometric/hardware keys)
AUTH_PASSKEY_ENABLED=false

# ===================================
# SMTP Configuration
# ===================================
# Required ONLY if AUTH_MAGIC_LINK_ENABLED=true
# Leave empty if not using magic links

SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@kost.local

# Magic Link Settings
MAGIC_LINK_SECRET=your-magic-link-secret-change-in-production
MAGIC_LINK_EXPIRES_IN=600

# ===================================
# WebAuthn/Passkey Configuration
# ===================================
# Required ONLY if AUTH_PASSKEY_ENABLED=true

WEBAUTHN_RP_NAME=Kost
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3001

# ===================================
# Application Settings
# ===================================

APP_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# Server Ports
API_PORT=3000
WEB_PORT=3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# ===================================
# Frontend Configuration
# ===================================

VITE_API_URL=http://localhost:3000/api
