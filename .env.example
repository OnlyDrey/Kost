# Environment
NODE_ENV=development

# Database
DB_USER=kostuser
DB_PASSWORD=kostpass
DB_NAME=kost
DATABASE_URL=postgresql://kostuser:kostpass@localhost:5432/kost?schema=public

# JWT (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Application
APP_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# Server Ports
API_PORT=3000
WEB_PORT=3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# Cookie security — set to true when serving over HTTPS
COOKIE_SECURE=false

# Frontend — leave as /api (nginx proxies internally); only override for custom setups
VITE_API_URL=/api
