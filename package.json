{
  "name": "kost",
  "version": "1.0.0",
  "private": true,
  "description": "Kost - Self-hosted shared expense tracking PWA",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "docker compose exec api /app/node_modules/.bin/prisma migrate deploy",
    "db:seed": "docker compose exec api node dist/prisma/seed.js",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build --no-cache",
    "docker:logs": "docker compose logs -f",
    "prepare": "[ -d .git ] && husky install || true",
    "postinstall": "[ -z \"${CI}\" ] && bash check-system.sh || true",
    "audit": "npm audit --omit=dev",
    "check": "bash check-system.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "lodash": "^4.17.23",
    "js-yaml": "^4.1.1",
    "nodemon": "^3.1.0",
    "cross-spawn": "^7.0.6",
    "got": "^11.8.5"
  }
}
